---
import SiteHeader from "../components/site-header.astro";
import RootLayout from "./root-layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<RootLayout {...{ title }}>
  <slot name="before-header" />
  <SiteHeader />
  <main>
    <slot />
  </main>
  <footer class="site-width-content site-px site-py">footer</footer>
</RootLayout>

<style is:global>
  body {
    @apply min-h-screen flex flex-col;
  }

  main {
    @apply flex-grow flex flex-col site-py gap-6;
  }
</style>
