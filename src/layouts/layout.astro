---
import RootLayout from "./root-layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<RootLayout {...{ title }}>
  <div id="site-container">
    <slot name="banner" />
    <header><h1>site header</h1></header>
    <main>
      <slot />
    </main>
    <footer>footer</footer>
  </div>
</RootLayout>

<style>
  #site-container {
    @apply min-h-screen flex flex-col;
  }

  header,
  main,
  footer {
    @apply p-2;
  }

  main {
    @apply flex-grow flex flex-col;
  }
</style>
