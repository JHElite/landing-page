---
import { getEntry } from "astro:content";
import Layout from "../layouts/layout-a.astro";
import ManagedImage from "../components/managed-image.astro";
import { marked } from "marked";

const { data } = await getEntry("about", "page");
---

<Layout title="About">
  <h2>
    {data.title}
  </h2>
  <p set:html={marked.parse(data.intro)} />
  {
    data.team?.map((tm) => (
      <ManagedImage
        height={300}
        width={300}
        alt="profile image"
        src={tm.photo}
        style={{ width: "auto", height: 300 }}
      />
    ))
  }
</Layout>
