---
import Layout from "../layouts/layout.astro";
import PageSection from "../components/common/page-section.astro";
import SiteBackground from "../components/site-background.astro";
import BannerSection from "../components/banner-section.astro";
import AboutSection from "../components/about-us-section.astro";
import ImgFadeInHandler from "../components/common/img-fade-in-handler.astro";
import ContactUsSection from "../components/contact-us-section.astro";
import QualificationsSection from "../components/qualifications-section.astro";
import ImgZoomHandler from "../components/common/img-zoom-handler.astro";
---

<Layout title="Elite Commercial Door">
  <ImgFadeInHandler />

  <SiteBackground slot="before-layout" />
  <BannerSection />
  <AboutSection />
  <QualificationsSection />
  <ContactUsSection />
</Layout>

<script>
  // redirect cms invite emails to admin page
  if (window.location.hash.startsWith("#invite_token")) {
    window.location.href = `${window.location.origin}/admin${window.location.hash}`;
  }
</script>
