---
import type { HTMLAttributes } from "astro/types";
import { propsWithMergedClasses } from "../helpers/style";
import Icon from "./common/icon.astro";

interface Props extends HTMLAttributes<"div"> {}

const props = Astro.props;
---

<div {...propsWithMergedClasses(props, ["site-background"])}>
  <Icon icon="site-background" class="w-full h-full opacity-35" />
  <!-- firefox gets upset at any blur other than backdrop -->
  <div class="blur-overlay absolute inset-0"></div>
</div>

<style is:global>
  .site-background {
    @apply absolute inset-0 -z-10 overflow-clip bg-base-100 blur-[50px];
  }

  @supports (backdrop-filter) {
    .site-background {
      @apply blur-none;
    }
    .blur-overlay {
      @apply backdrop-blur-[50px];
    }
  }
</style>
